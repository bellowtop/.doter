" Type :help nv for help.

let mapleader=<space>


nnoremap H ^
nnoremap L $
vnoremap H ^

""" g_ : none blank char
" vnoremap L $
vnoremap L g_

onoremap H ^
onoremap L $

nnoremap ; <C-d>
nnoremap ' <C-u>
nnoremap <C-l> zz
nnoremap m %

vnoremap ; <C-d>
vnoremap ' <C-u>
vnoremap <C-l> zz
vnoremap m %

inoremap <C-v> :ScrollLines ammount=-30
"" is already set by sublime keybinds
"inoremap <M-v> :ScrollLines ammount=30

inoremap <C-n> :Move by=lines forward=true<CR>
inoremap <C-p> :Move by=lines forward=false<CR>

inoremap <C-y> :Paste<CR>

nnoremap <C-i> :JumpForward<CR>
nnoremap <C-o> :JumpBack<CR>
nnoremap <C-l> :ShowAtCenter


nnoremap FileType go,h,cc,cpp,c gd :LspSymbolDefinition<CR>
nnoremap FileType go,h,cc,cpp,c gr :LspSymbolReferences<CR>
nnoremap FileType go,h,cc,cpp,c gi :LspSymbolImplementation<CR>
nnoremap FileType go,h,cc,cpp,c gR :LspSymbolRename<CR>
nnoremap FileType go,h,cc,cpp,c ga :LspCodeActions<CR>
nnoremap FileType go,h,cc,cpp,c gF :LspFormat<CR>
nnoremap FileType go,h,cc,cpp,c gf :LspFormat<CR>


nnoremap <leader>f :ShowOverlay overlay=goto show_files=true<CR>
nnoremap <leader>s :ShowOverlay overlay=goto text=@<CR>
nnoremap @ :RevealInSideBar<CR>
nnoremap f :AceJumpWord<CR>

nnoremap <leader>w :Save<CR>
nnoremap <leader>k :CloseFile<CR>
nnoremap <leader>K :CloseOtherTabs<CR>
nnoremap <leader>h :PrevView<CR>
nnoremap <leader>l :NextView<CR>

vnoremap <leader>w :Save<CR>
vnoremap <leader>k :CloseFile<CR>
vnoremap <leader>K :CloseOtherTabs<CR>
vnoremap <leader>h :PrevView<CR>
vnoremap <leader>l :NextView<CR>

